{
  "name": "rs-system",
  "version": "3.1.0",
  "description": "跳繩課堂記錄系統 - HKJRA 教練記錄系統",
  "type": "module",
  "main": "./src/main.js",
  "browser": "./src/index.js",
  "exports": {
    ".": {
      "import": "./src/main.js",
      "browser": "./src/index.js"
    },
    "./init/*": "./src/init/*",
    "./compat/*": "./src/compat/*",
    "./examples/*": "./src/examples/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "rope-skipping",
    "sports",
    "coaching",
    "checkpoint",
    "training-log"
  ],
  "author": "HKJRA",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "rollup-plugin-visualizer": "^5.12.0"
  },
  "dependencies": {
    "pouchdb": "^8.0.1",
    "pouchdb-find": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
